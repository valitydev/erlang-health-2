% Common project erlang options.
{erl_opts, [

    % mandatory
    debug_info,
    warnings_as_errors,
    warn_export_all,
    warn_missing_spec,
    warn_untyped_record,
    warn_export_vars,

    % by default
    warn_unused_record,
    warn_bif_clash,
    warn_obsolete_guard,
    warn_unused_vars,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_deprecated_function

    % at will
    % bin_opt_info
    % no_auto_import
    % warn_missing_spec_all

]}.

% Common project dependencies.
{deps, [
    {cowboy, "2.12.0"},
    {jsx   , "3.1.0"},
    {cg_mon, {git, "https://github.com/valitydev/cg_mon.git", {branch, "master"}}},
    {genlib, {git, "https://github.com/valitydev/genlib.git", {tag, "v1.1.0"}}}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    deprecated_functions_calls,
    deprecated_functions
]}.

{dialyzer, [
    {warnings, [
        % mandatory
        unmatched_returns,
        error_handling,
        unknown
    ]},
    {plt_apps, all_deps}
]}.

{profiles, [
    {test, [
        {deps, []},
        {dialyzer, [{plt_extra_apps, [eunit]}]}
    ]}
]}.
